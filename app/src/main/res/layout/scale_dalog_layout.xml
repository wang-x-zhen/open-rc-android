<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_bg"
    android:orientation="vertical">

    <com.wangzhen.openrc.view.CenterSeekBar
        android:id="@+id/progressScale"
        android:clickable="true"
        android:focusable="true"
        android:padding="10dp"
        android:layout_margin="30dp"
        android:layout_width="260dp"
        android:layout_height="160dp"
        app:backColor="#F0F1F3"
        app:backFrameColor="#FFC107"
        app:backFrameSize="1dp"
        app:backHeight="5dp"
        app:textBackRadius="2dp"
        app:textBackColor="@color/white"
        app:textColor="@color/black"
        app:maxProgress="100"
        app:minProgress="0"
        app:centerState="true"
        app:progress="0"
        app:progressColor="#4CAF50"
        app:progressMinusColor="#EA1313"
        app:thumbColor="#00BCD4"
        app:thumbNormalRadius="10dp"
        app:thumbPressRadius="12dp" />

    <LinearLayout
        android:id="@+id/bottomButtonLl"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/cancelBt"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/left_button_bg"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:text="取消"
            android:textColor="#EC7777" />

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="#F48095AC" />

        <TextView
            android:id="@+id/sureBt"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/right_button_bg"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:text="确定" />

    </LinearLayout>
</LinearLayout>