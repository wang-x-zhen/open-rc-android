<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:state_checked="false">
        <shape>
            <stroke android:width="1dp" android:color="#353434"/>
            <solid android:color="@color/radio_nomal" />
        </shape>
    </item>

    <item android:state_pressed="true">
        <shape>
            <stroke android:width="1dp" android:color="#353434"/>
            <solid android:color="@color/radio_pressed"/>
        </shape>
    </item>

    <item
        android:state_checked="true">
        <shape>
            <stroke android:width="2dp" android:color="#000000"/>
            <solid android:color="@color/radio_selected" />
        </shape>
    </item>
</selector>