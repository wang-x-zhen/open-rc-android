<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <corners android:radius="2dp"/>
            <solid android:color="#ED2C25" />
            <stroke android:width="2dp" android:color="#96BCDA"/>
        </shape>
    </item>
    <item android:state_pressed="false">
        <shape>
            <corners android:radius="2dp"/>
            <solid android:color="#EF4842" />
            <stroke android:width="1dp" android:color="#96BCDA"/>
        </shape>
    </item>

</selector>